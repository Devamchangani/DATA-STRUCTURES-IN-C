							// For 2-D Character Array //

							// Using Row Major Order //

#include<stdio.h>

int main()
{
	int c=0,i=0,j=0,lo=0,ans=0;
	int m=0,n=0;
	char c[10][10];

	printf("\n > Enter the row & column of array : ");
	scanf("%d %d",&m,&n);
	c[m][n];

	printf("\n > Base address : %ld ",&c[0][0]);
	lo=&c[0][0];
	printf("\n > Enter the location of element : ");
	scanf("%d %d",&i,&j);

	c=1;

	ans=lo + c * ( (n*(i-1)) + (j-1) );

	printf("\n\n >> The location of %d %d th element using row major order : %d ",i,j,ans);
	return 0;
}



