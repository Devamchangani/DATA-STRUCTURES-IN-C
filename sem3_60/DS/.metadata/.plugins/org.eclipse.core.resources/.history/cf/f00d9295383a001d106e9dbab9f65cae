#include<stdio.h>
#include<stdlib.h>

struct node{
	int data;
	struct node *next;
}*front,*rear,*nn,*temp,*curr,*prev,*tt;

int size=0,len=0;

void insertion()
{
	if(len>=size)
	{
		printf("\n > Queue will be overflow !!! ");
		return;
	}
	else
	{
		nn = (struct node *) malloc (sizeof(nn));
		printf("\n > Enter the value : ");
		scanf("%d",&nn->data);
		nn->next=NULL;

		if(front==NULL)
		{
			front=nn;
			rear=nn;
		}
		else
		{
			rear->next=nn;
			rear=nn;
		}
		len++;
	}
}

void deletion()
{
	if(rear==NULL)
		{
			printf("\n > Link list is empty.");
			return;
		}
		else
		{
			temp=front;

			while(temp->next!=rear)
			{
				temp=temp->next;
			}
			printf("\n > Deleted element of node is : %d ",rear->data);

			free(rear);
			rear=temp;
			rear->next=NULL;
		}
}

void display()
{
	if(rear==NULL)
	{
		printf("\n > Link list is empty.");
		return;
	}
	else
	{
		temp=front;
		while(temp!=NULL)
		{
			printf("\nElement of node : %d ",temp->data);
			temp=temp->next;
		}
	}
}

int main()
{
	create();
	int chh;
	do
	{
		printf("\n 1: Insertion : ");
		printf("\n 2: Deletion");
		printf("\n 3: Display : ");
		printf("\n 4: Exit : ");

		printf("\n > Enter your choice : ");
		scanf("%d",&chh);

		switch(chh)
		{
		case 1:
			insertion();
			break;

		case 2:
			deletion();
			break;

		case 3:
			display();
			break;

		case 4:
			exit(0);
			break;

		default:
			printf("\n > Invalid option !!! ");
			break;
		}
	}while(chh != 4);
	return 0;
}

