#include<stdio.h>
#include<stdlib.h>

struct mix{
	int it;
	char name[20];
	struct mix* next;
}*first,*last,*nn;

struct integer{
	int it1;
	struct integer *next;
}*first1,*last1,*sum,*temp1,*nn1;

struct ch{
	char name1[20];
	struct ch *next;
}*first2,*last2,*nn2;

void create()
{
	int x;

	while(x!=-1)
	{
		nn = (struct mix*) malloc(sizeof(struct mix)) ;

		printf("\n > Enter value : ");
		scanf("%d",&nn->it);
		printf("\n > Enter name : ");
		scanf("%d",&nn->name);
		nn->next=NULL;

		if(first==NULL)
		{
			first=last=nn;
		}
		else
		{
			last->next=nn;
			last=nn;
		}

		printf("\n > Continue (y=0/n=-1");
		scanf("%d",&x);
	}
}



int main()
{

	return 0;
}
